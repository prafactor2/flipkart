<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:weightSum="2">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"

        android:background="#a8a8a8" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#e8e8e8"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/brandicon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:src="@drawable/j" />

            <TextView
                android:id="@+id/brandname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/brandicon"
                android:text="TITLE" />


            <TextView
                android:id="@+id/datetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/brandname"
                android:layout_below="@id/brandname"
                android:layout_marginTop="5dp"
                android:text="EXPIRY DATE"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/datetext"
                android:layout_below="@+id/datetext"
                android:layout_marginTop="5dp"
                android:text="Terms &amp; Conditions"
                android:textColor="#4caf50"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/datetext"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/datetext"
                android:text="29/10/2015"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:text="CD100"
                android:textColor="#F44336"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/code"
                android:text="OFFER CODE"

                android:textSize="10dp" />


            <ImageView
                android:id="@+id/tick"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/brandname"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/brandname"
                android:src="@drawable/check"
                android:visibility="invisible" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#ffffff">

        <TextView
            android:id="@+id/branddesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="30"
            android:padding="5dp"
            android:text="A little less than a year after the rest were announced, we have yet another addition to Phase 3: Scott Lang and Hope van Dyne will be back in Ant-Man and the Wasp.A little less than a year after the rest were announced, we have yet another addition to Phase 3: Scott Lang and Hope van Dyne will be back in Ant-Man and the Wasp.A little less than a year after the rest were announced, we have yet another addition to Phase 3: Scott Lang and Hope van Dyne will be back in Ant-Man and the Wasp."

            />

        <ImageView
            android:id="@+id/brandphoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/branddesc"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/j" />


        <android.support.v7.widget.CardView
            android:id="@+id/likecard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/brandphoto"
            android:layout_marginTop="5dp"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/brandphoto">

                <ImageView

                    android:id="@+id/like"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/thumb2"


                    />
                <ImageView

                    android:id="@+id/unlike"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/thumb"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/like"
                    android:gravity="bottom"
                    android:text="1204" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/likecard"
            android:background="#a8a8a8" />

    </RelativeLayout>
</LinearLayout>