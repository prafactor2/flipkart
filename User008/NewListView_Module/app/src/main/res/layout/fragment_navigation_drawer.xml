<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIcons"
    android:orientation="vertical"
    android:weightSum="8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6.25"
        android:orientation="vertical"

        android:weightSum="3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.1"
            android:background="#1FBAD6"
            android:weightSum="2"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.60"
            android:weightSum="2"
            >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0"
                    android:weightSum="2"
                    >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/circularbuttonprof"
                        android:background ="@drawable/u"
                        app:border_color="#FF000000"
                        android:layout_marginLeft="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMAN VERMA"
                        android:id="@+id/textView"
                        android:textColor="@color/drawertextcolor"
                        android:layout_centerInParent="true"
                        android:textSize="20dp"
                        />

                </RelativeLayout>



                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2"
                >

            </LinearLayout>


        </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            >

            <View
                android:layout_width="260dp"
                android:layout_height="10dp"
                android:background="#101010"
                android:layout_alignParentBottom="true"
                />




        </LinearLayout>

    </LinearLayout>

    <RelativeLayout

        android:layout_width="260dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_weight="1.75"
        android:background="#101010"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"

                >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listView"
            android:layout_width="260dp"
            android:layout_height="280dp"
            >


        </android.support.v7.widget.RecyclerView>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="11dp"
                    android:background="#101010"

                    />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="COPYRIGHT Â© 2015 KHAALIJEB"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="10dp"
                    android:textColor="@color/drawertextcolor"
                    android:id="@+id/copyright"
                    />



            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>