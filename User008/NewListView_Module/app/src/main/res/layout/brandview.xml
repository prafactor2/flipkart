<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="0.4">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/brandlogo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                       android:layout_centerVertical="true"
                        android:src="@drawable/nike"
                        android:layout_marginLeft="5dp"
                        />


                    <TextView
                        android:id="@+id/brandname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="NIKE"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="12dp"
        android:layout_toRightOf="@+id/brandlogo"
                        android:textColor="#727272" />

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/brandname"
                        android:layout_marginLeft="10dp"
                        android:text="Fashion"
                        android:layout_toRightOf="@+id/brandlogo"
                        android:textColor="#a8a8a8"
                        android:textSize="8dp" />


                    <ImageView
                        android:id="@+id/tick"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignTop="@+id/brandname"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/brandname"
                        android:src="@drawable/check"
                        android:visibility="invisible"/>

                    <View
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="60dp"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/tick"
                        android:background="#bdbdbd"
                        />

                    ;<TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/line"
                        android:text="As an information system, the basic objective of accounting is to provide useful information to the interested group of users, both external and internal. Then"
                        android:textColor="#212121"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_alignTop="@+id/tick"
                        android:textSize="10dp"
                        />


                </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        >
                        <Button
                            android:id="@+id/unfollowbutton"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/roundedcorneredittext"
                            android:text="UnFollow"
                            android:textColor="#0277bd"
                            android:textSize="8dp"
                            android:visibility="invisible"
                            android:textStyle="bold"
                            />
                        <Button
                            android:id="@+id/followbutton"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/roundedcorneredittext"
                            android:text="+ Follow"
                            android:textColor="#0277bd"
                            android:textSize="8dp"
                            android:textStyle="bold"
                            />


                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </RelativeLayout>




</LinearLayout>