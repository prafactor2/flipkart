<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l"
        android:orientation="vertical"
        android:background="#e9e9e9"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#727272"
            android:layout_marginTop="0dp"
            />
    <TextView
        android:id="@+id/where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHERE TO APPLY??"
        android:textStyle="bold"
        android:layout_margin="16dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#727272"
            android:layout_marginTop="0dp"
            />
</LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. 3, RMZ Infinity - Tower E 3rd, 4th, and 5th Floors, Old Madras Road, Bengaluru, Karnataka 560016"
        android:layout_below="@+id/l"
        android:padding="16dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundedcorneredittext"
        >

    <ImageView
        android:id="@+id/phoneicon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/mobile"
        android:layout_below="@+id/address"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/mobilenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9690493040"
        android:layout_alignBottom="@+id/phoneicon"
        android:layout_toRightOf="@+id/phoneicon"
        android:layout_toEndOf="@+id/phoneicon"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        />


    </LinearLayout>


</RelativeLayout>