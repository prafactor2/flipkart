<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f9f9f9"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/listtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="information"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:typeface="serif"
                android:textSize="16dp"
                android:layout_margin="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addresss"
                android:ems="28"
                android:layout_margin="5dp"
                android:id="@+id/address"
                android:textSize="16dp"
                android:typeface="sans"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:text="type"
                android:layout_margin="7dp"
                android:textSize = "14dp"
                />
            <ImageView
                android:id="@+id/listicon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background = "@drawable/x14"
                android:layout_margin="7dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical"
            android:weightSum="2"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity = "center"
                >
            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundedreview"
                android:text="4.0"
                android:gravity ="center"
                android:textColor="#000000"
                android:id="@+id/rating"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Votes"
                    android:layout_toLeftOf="@+id/votes"
                    android:id="@+id/textviewvotes"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 456 "
                    android:layout_margin="5dp"
                    android:id="@+id/votes"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity = "center"
                    >

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/distance"
                        android:id="@+id/distance"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="7.3 km "
                        android:layout_margin="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:id="@+id/review"
                        android:src ="@drawable/review1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text=" 53 "
                        android:paddingTop="2dp"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

            <Button

                android:layout_width="56dp"
                android:layout_height="48dp"
                android:background="@drawable/roundedcorneredittext"
                android:layout_margin="5dp"
                android:text="Pay"
                android:textColor="#0277bd"
                android:layout_below="@+id/review"
                android:id="@+id/pay"
                />

               <Button
                   android:layout_width="36dp"
                   android:layout_height="36dp"
                   android:background="@drawable/callblue"
                   android:layout_toRightOf="@+id/pay"
                   android:layout_below="@+id/review"
                   android:layout_margin="10dp"

                   />

                </RelativeLayout>




            </LinearLayout>

            Button
                android:id="@+id/b1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>