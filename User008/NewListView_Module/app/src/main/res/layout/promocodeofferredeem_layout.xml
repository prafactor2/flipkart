<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l"
        android:orientation="vertical"
        android:background="#e9e9e9"
        >
        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOW TO REDEEM"
            android:textStyle="bold"
            android:layout_margin="16dp"

            />
        <View
            android:id="@+id/downline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#727272"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/where"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sendblack"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/redeem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l"
        android:padding="16dp"
        android:layout_marginBottom="5dp"
        android:text="If you've played about creating dialogs using the DialogFragment class, you've probably noticed that the"
        android:visibility="gone"
        />





</RelativeLayout>